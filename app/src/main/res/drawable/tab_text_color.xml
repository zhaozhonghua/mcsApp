<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item android:state_pressed="false" android:state_selected="false" android:color="@color/tab_text_default"/>
    <item android:state_pressed="false" android:state_selected="true" android:color="@color/tab_text_selected"/>

    <!-- Pressed -->
    <item android:state_pressed="true" android:state_selected="true" android:color="@color/tab_text_selected"/>
    <item android:state_pressed="true" android:color="@color/tab_text_selected"/>

</selector>